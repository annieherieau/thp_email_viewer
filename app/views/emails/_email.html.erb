<div id="<%= dom_id email if email%>" class='bg-white p-3 border rounded'>
  <small>Objet:</small>
  <h4><%= email.object if email %></h4>
  <hr>
  <p><%= email.body if email %></p>
</div>
<% if email %>
  <div class="d-flex justify-content-end my-3">
    <div><%= button_to "Supprimer", email, method: :delete, class: "btn btn-danger bi bi-trash-fill mx-2"%></div>
    <div>
      <%= render "form_toggle_read", email: email, submit_text: email.read_btn_text, btn_class: "btn btn-outline-secondary" %>
    </div>
  </div>
<% end %>
