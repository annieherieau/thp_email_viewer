<div id="<%= dom_id email %>" class='bg-white p-3 border rounded'>
  <small>Objet:</small>
  <h4><%= email.object %></h4>
  <hr>
  <p><%= email.body %></p>
</div>
<div class="d-flex justify-content-end my-3">
  <div><%= button_to "Supprimer", email, method: :delete, class: "btn btn-danger bi bi-trash-fill mx-2"%></div>
  <div><%= button_to email.read_btn_label, email, method: :update, class: "btn btn-secondary"%></div>
</div>
